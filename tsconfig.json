{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    // "types": [], // Removido para permitir que o TypeScript inclua automaticamente os tipos
    "paths": {
      "expo-location": ["./node_modules/expo-location"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@services/*": ["./src/services/*"],
      "@theme/*": ["./src/theme/*"],
      "@typings/*": ["./src/@types/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/geminiApi": ["./src/services/geminiApi.ts"],
      "@/*": ["./src/*"]
    }
  }
}
